{
  "manifest_version": 3,
  "name": "HighlightAI",
  "version": "1.0.0",
  "description": "Quickly search highlighted text in ChatGPT using a simple right-click.",
  "permissions": ["contextMenus","storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16":"icon16.png",
    "48":"icon.png",
    "128":"icon128.png"
  },
  "action": {
    "default_popup":"popup.html",
    "default_title": "HighlightAI",
    "default_icon": {
      "16": "icon16.png",
      "48":"icon.png",
      "128":"icon128.png"
    }
  },
  "content_scripts": [
  {
    "matches": ["https://chatgpt.com/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
]
}